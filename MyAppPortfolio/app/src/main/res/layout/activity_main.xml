<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.myappportfolio.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/style_title"
            android:layout_height="@dimen/title_text_height"
            android:text="@string/title"
            android:textAlignment="center"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/start_project_1"
            style="@style/style_btn"
            android:onClick="onClick"
            android:text="@string/btn1_txt" />

        <Button
            android:id="@+id/start_project_2"
            style="@style/style_btn"
            android:onClick="onClick"
            android:text="@string/btn2_txt" />

        <Button
            android:id="@+id/start_project_3"
            style="@style/style_btn"
            android:onClick="onClick"
            android:text="@string/btn3_txt" />

        <Button
            android:id="@+id/start_project_4"
            style="@style/style_btn"
            android:onClick="onClick"
            android:text="@string/btn4_txt" />

        <Button
            android:id="@+id/start_project_5"
            style="@style/style_btn"
            android:onClick="onClick"
            android:text="@string/btn5_txt" />

        <Button
            android:id="@+id/start_project_6"
            style="@style/style_btn"
            android:onClick="onClick"
            android:text="@string/btn6_txt" />
    </LinearLayout>
</ScrollView>
